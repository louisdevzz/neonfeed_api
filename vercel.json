{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/server.js"
    }
  ],
  "functions": {
    "api/server.js": {
      "memory": 3008,
      "maxDuration": 300
    }
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max_old_space_size=3008"
    }
  }
} 